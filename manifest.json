{
  "manifest_version": 2,
  "name": "Morning Coffee",
  "version": "1.0.0",
  "author": "Samson Wu",
  "description": "Keeps track of routine websites and opens them in tabs",

  "icons": {
    "64": "img/icon.png",
    "128": "img/icon_128.png"
  },
  "browser_action": {
    "default_title": "Morning Coffee!",
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "options_page": "options.html"
}
